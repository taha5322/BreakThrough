<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckinActivity">

    <ImageView
        android:id="@+id/q2_img"
        android:layout_width="240dp"
        android:layout_height="211dp"
        android:background="@drawable/appetite"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/q2_option1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question" />

    <Button
        android:id="@+id/q1_choice4"
        android:layout_width="117dp"
        android:layout_height="115dp"
        android:background="@drawable/face1"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/q1_choice2"
        app:layout_constraintTop_toTopOf="@+id/q1_choice3" />

    <Button
        android:id="@+id/q1_choice3"
        android:layout_width="117dp"
        android:layout_height="115dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/face2"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/q1_choice1"
        app:layout_constraintTop_toBottomOf="@+id/q1_choice1" />

    <Button
        android:id="@+id/q1_choice2"
        android:layout_width="117dp"
        android:layout_height="115dp"
        android:layout_marginTop="146dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/face3"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question" />

    <Button
        android:id="@+id/q1_choice1"
        android:layout_width="117dp"
        android:layout_height="115dp"
        android:layout_marginStart="60dp"
        android:background="@drawable/face4"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/q1_choice2" />

    <TextView
        android:id="@+id/note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#9b9aff"
        android:fontFamily="@font/actor"
        android:text="Happiness can be found even in the darkest of times, if one only remembers to turn on the light"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/question"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#2c4272"
        android:fontFamily="@font/amaranth"
        android:padding="20dp"
        android:text="What has been the cause of your discomfort"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/q1_text1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#C7849E"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="Delighted"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/q1_choice1"
        app:layout_constraintStart_toStartOf="@+id/q1_choice1"
        app:layout_constraintTop_toBottomOf="@+id/q1_choice1" />

    <TextView
        android:id="@+id/q1_text2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#C7849E"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="Happy"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/q1_choice2"
        app:layout_constraintStart_toStartOf="@+id/q1_choice2"
        app:layout_constraintTop_toBottomOf="@+id/q1_choice2" />

    <TextView
        android:id="@+id/q1_text4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#C7849E"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="Terrible:("
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/q1_choice4"
        app:layout_constraintStart_toStartOf="@+id/q1_choice4"
        app:layout_constraintTop_toBottomOf="@+id/q1_choice4" />

    <TextView
        android:id="@+id/q1_text3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#C7849E"
        android:fontFamily="sans-serif-medium"
        android:padding="12dp"
        android:text="Unhappy"
        android:textAlignment="center"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/q1_choice3"
        app:layout_constraintStart_toStartOf="@+id/q1_choice3"
        app:layout_constraintTop_toBottomOf="@+id/q1_choice3" />

    <Button
        android:id="@+id/q2_option3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="#ffd684"
        android:padding="12dp"
        android:shadowColor="@color/cardview_dark_background"
        android:text="I have little to no appetite today"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/q2_option2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="#ffd684"
        android:padding="12dp"
        android:shadowColor="@color/cardview_dark_background"
        android:text="My appetite is decent/moderate"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/q2_option3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"
        android:fontFamily="sans-serif-medium"/>


    <Button
        android:id="@+id/q2_option1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="#ffd684"
        android:padding="12dp"
        android:shadowColor="@color/cardview_dark_background"
        android:text="My appetite is great!!"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/q2_option2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/q3_option1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:background="#5c6fd1"
        android:capitalize="none"
        android:fontFamily="sans-serif-medium"
        android:text="Falling out with family/friends"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/q3_option2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/q3_option2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:background="#5c6fd1"
        android:text="Sick of being at home"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/q3_option3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/q3_option4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:background="#5c6fd1"
        android:text="Other"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/q3_option3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:background="#5c6fd1"
        android:text="missing your friends"
        android:textSize="20sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/q3_option4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        android:textAllCaps="false"/>

    <ImageView
        android:id="@+id/q3_picture"
        android:layout_width="120dp"
        android:layout_height="148dp"
        app:layout_constraintBottom_toTopOf="@+id/q3_option1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question"
        app:srcCompat="@drawable/discomfort"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/finalTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Thankyou for sharing with us.\n your results will be added to the tracker by the end of the week"
        android:textAlignment="center"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="117dp"
        android:layout_height="125dp"
        android:layout_marginTop="176dp"
        app:layout_constraintBottom_toTopOf="@+id/finalTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/thankyou"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>